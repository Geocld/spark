{
  "name": "sparkee",
  "version": "1.1.3",
  "description": "A publish tool for monorepo,just like lerna but support pnpm.",
  "author": "lijiahao <lijiahao5372@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "lint": "rome check src",
    "fmt": "rome format src --write",
    "dev": "rimraf dist && tsc -w",
    "build": "rimraf dist && tsc",
    "pub": "node dist/index.js publish",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "bin": {
    "sparkee": "dist/index.js",
    "spk": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Geocld/sparkee"
  },
  "keywords": [
    "monorepo",
    "pnpm"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.0.1",
    "@types/jsonfile": "^6.1.1",
    "@types/node": "^17.0.43",
    "@types/shelljs": "^0.8.11",
    "@types/yargs": "^17.0.10",
    "rome": "^11.0.0",
    "typescript": "^4.9.4",
    "vitest": "^0.28.4"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "conventional-changelog": "^3.1.25",
    "dayjs": "^1.11.7",
    "fs-extra": "^10.1.0",
    "git-cliff": "^1.1.2",
    "glob": "^8.0.3",
    "inquirer": "^8.2.4",
    "jsonfile": "^6.1.0",
    "read-yaml-file": "^2.1.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "shelljs": "^0.8.5",
    "shelljs-live": "^0.0.5",
    "yargs": "^17.5.1"
